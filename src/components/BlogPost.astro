---
import type { Tag } from "../types/types";

const { post } = Astro.props;

// pubDate peut être un string ou un Date, on gère les deux
const rawPubDate = post.frontmatter?.pubDate;
const pubDate =
  rawPubDate instanceof Date ? rawPubDate : rawPubDate ? new Date(rawPubDate) : null;

const date = pubDate
  ? new Intl.DateTimeFormat("fr-FR", { dateStyle: "short" }).format(pubDate)
  : "";

function getTagClass(tag: Tag) {
  const validTags: Tag[] = [
    "web",
    "politique",
    "bonjour",
    "poème",
    "philosophie",
    "entreprise",
    "récit",
  ];
  return validTags.includes(tag) ? tag : ("" as Tag);
}

// tags peut être absent sur certains posts → on met [] par défaut
const tags: Tag[] = post.frontmatter?.tags ?? [];

// data attribute pour le filtrage côté index.astro
const tagsDataAttr = tags.join(",");
---

<li data-tags-post={tagsDataAttr}>
  <a href={post.url}>{post.frontmatter.title}</a>
  <p>{date}</p>
  <p class="description">{post.frontmatter.description}</p>

  {tags.length > 0 && (
    <>
      {tags.map((tag: Tag) => (
        <span class:list={["tag", { [getTagClass(tag)]: true }]}>{tag}</span>
      ))}
    </>
  )}
</li>

<style>
  li {
    list-style: none;
    margin-bottom: 2.5rem;
  }
  p,
  a {
    margin: 0;
  }
  a {
    font-weight: bold;
  }
  .description {
    color: var(--color-font-light);
  }

  .tag {
    font-size: 0.75rem;
    font-weight: bold;
    margin-right: 0.5rem;
    padding: 0.25rem 0.5rem 0 0.5rem;
    border-radius: 0.25rem;
    border: 0.15rem dotted;

    &.entreprise {
      border-color: blue;
    }    
    &.web {
      border-color: var(--color-web);
    }
    &.politique {
      border-color: var(--color-politique);
    }
    &.bonjour {
      border-color: var(--color-bonjour);
    }
    &.poème {
      border-color: var(--color-poème);
    }
    &.philosophie {
      border-color: var(--color-philosophie);
    }
    &.récit {
      border-color: var(--color-récit);
    }
  }
</style>
